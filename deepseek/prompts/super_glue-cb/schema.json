{
    "format": {
        "type": "json_schema",
        "name": "cb_synthetic_data",
        "strict": true,
        "schema": {
            "type": "object",
            "properties": {
                "pairs": {
                    "type": "array",
                    "description": "A list of NLI examples following the SuperGLUE CB task structure.",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Premise": {
                                "type": "string",
                                "description": "The original statement (context) provided in the CB dataset."
                            },
                            "Hypothesis": {
                                "type": "string",
                                "description": "The hypothesis whose truth must be inferred from the premise."
                            },
                            "Label": {
                                "type": "number",
                                "description": "The NLI judgment: 0 = entailment, 1 = contradiction, 2 = neutral."
                            }
                        },
                        "required": [
                            "Premise",
                            "Hypothesis",
                            "Label"
                        ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [
                "pairs"
            ],
            "additionalProperties": false
        }
    }
}